@foreach (var card in cards)
{
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@cardFileName(card)" class="card-img" alt="@card.Value of @card.Suit">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@card.Value of @card.Suit</h5>
                </div>
            </div>
        </div>
    </div>
}
